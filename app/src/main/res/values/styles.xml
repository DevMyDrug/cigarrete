<resources>

    <!-- Base application theme. -->
    <style name="AppTheme" parent="android:Theme.Holo.Light.DarkActionBar">
        <!-- Customize your theme here. -->
        <item name="android:windowBackground">@color/grey</item>
        <item name="android:textColor">@color/white</item>
        <item name="android:popupMenuStyle">@style/myAppPopup</item>
        <item name="android:actionBarStyle">@style/myAppActonBar</item>
        <item name="android:textSize">18sp</item>
    </style>

    <style name="EditText" parent="android:Widget.Holo.Light.EditText">
        <item name="android:textColor">@color/white</item>
        <item name="android:textCursorDrawable">@null</item>
        <item name="android:editTextColor">@color/white</item>
        <item name="android:editTextBackground">@color/white</item>
        <item name="android:textSize">25dp</item>
    </style>

    <style name="EditTextWhite" parent="android:Widget.Holo.Light.EditText">
        <item name="android:textColor">@color/black</item>
        <item name="android:textCursorDrawable">@null</item>
        <item name="android:editTextColor">@color/black</item>
        <item name="android:editTextBackground">@color/white</item>
    </style>

    <style name="ConfirmButtonPurple" parent="android:Widget.Holo.Light.Button">
        <item name="android:background">@color/purple</item>
        <item name="android:textColor">@color/white</item>
    </style>

    <style name="ConfirmButtonRed" parent="android:Widget.Holo.Light.Button">
        <item name="android:background">@color/red</item>
        <item name="android:textColor">@color/white</item>
    </style>

    <style name="ConfirmButtonBlue" parent="android:Widget.Holo.Light.Button">
        <item name="android:background">@color/blue</item>
        <item name="android:textColor">@color/white</item>
    </style>

    <style name="ConfirmButtonGreen" parent="android:Widget.Holo.Light.Button">
        <item name="android:background">@color/green</item>
        <item name="android:textColor">@color/white</item>
    </style>

    <style name="ConfirmButtonOrange" parent="android:Widget.Holo.Light.Button">
        <item name="android:background">@color/gold</item>
        <item name="android:textColor">@color/white</item>
    </style>

    <style name="myAppPopup" parent="android:Widget.Holo.Light.PopupMenu">
        <item name="android:popupBackground">@color/greyMenu</item>
        <item name="android:background">@color/greyMenu</item>
        <item name="android:colorBackground">@color/greyMenu</item>
        <item name="android:backgroundSplit">@color/greyMenu</item>
        <item name="android:backgroundStacked">@color/greyMenu</item>
    </style>

    <style name="myAppActonBar" parent="android:Widget.Holo.Light.ActionBar">
        <item name="android:background">@color/greyMenu</item>
        <item name="android:colorBackground">@color/greyMenu</item>
        <item name="android:backgroundSplit">@color/greyMenu</item>
        <item name="android:backgroundStacked">@color/greyMenu</item>
        <item name="android:titleTextStyle">@style/HoloTitleText</item>
    </style>

    <style name="HoloTitleText" parent="android:TextAppearance.Holo">
        <item name="android:textColor">@color/white</item>
    </style>

    <style name="spinner" parent="android:Widget.Holo.DropDownItem.Spinner">
        <item name="android:popupBackground">@color/black</item>
    </style>
</resources>
